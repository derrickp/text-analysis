{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [
            "es2015",
            "dom",
            "dom.iterable"
        ],
        "target": "es5",
        "rootDir": "src",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "jsx": "react"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}